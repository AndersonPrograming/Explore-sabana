---
const { title, url, logo } = Astro.props;
---

<article
     class="flex gap-4 bg-white hover:bg-green-100 shadow-2xl px-4 my-4 py-2 w-full"
>
     <img src={logo} alt="" />
     <div class="w-full">
          <h2 class="text-center text-neutral-500">{title}</h2>
          <a
               href={url}
               type="button"
               class="text-white w-full bg-green-700 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-blue-200 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-900 font-medium rounded-lg text-sm px-5 py-2.5 inline-flex justify-center text-center"
               >ver ruta</a
          >
     </div>
</article>
