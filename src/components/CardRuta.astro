---
const { ruta, url, img, logo } = Astro.props;
---

<div class="bg-green-200 rounded-t-lg">
     <img src={img} alt="" class="w-full rounded-t-lg foto" />
     <h4 class="text-lg font-bold flex justify-center p-4 text-neutral-900">
          <img src={logo} alt="" />
     </h4>
     <h4 class="text-lg font-bold text-center py-2 text-neutral-800">{ruta}</h4>
     <a
          href={url}
          type="button"
          class="text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-blue-200 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-900 font-medium text-sm px-5 py-2.5 inline-flex justify-center w-full text-center"
          >Detalles de la Ruta</a
     >
</div>
<style>
     .foto {
          height: 200px;
          object-fit: cover;
     }
</style>
