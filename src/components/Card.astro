---
interface Prop {
     imagen: string;
     name: string;
     url: string;
}
const { imagen, name, url } = Astro.props;
---

<div
     class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700"
>
     <a href="#">
          <img class="rounded-t-lg w-full" src={imagen} alt="" />
     </a>
     <div class="p-5">
          <a href="#">
               <h5
                    class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white text-center"
               >
                    {name}
               </h5>
          </a>
          <a
               href={url}
               type="button"
               class="text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-blue-200 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-900 font-medium rounded-lg text-sm px-5 py-2.5 inline-flex justify-center w-full text-center"
               >ver m√°s</a
          >
     </div>
</div>
